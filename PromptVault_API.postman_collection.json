{
  "info": {
    "name": "AI Prompt Manager API",
    "description": "Complete API collection for AI Prompt Manager",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:5000/api" },
    { "key": "token", "value": "" }
  ],
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Register",
          "request": {
            "method": "POST",
            "url": "{{baseUrl}}/auth/register",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"fullName\": \"John Doe\",\n  \"email\": \"john@example.com\",\n  \"password\": \"password123\"\n}"
            }
          }
        },
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": ["const res = pm.response.json();", "if (res.token) pm.collectionVariables.set('token', res.token);"]
              }
            }
          ],
          "request": {
            "method": "POST",
            "url": "{{baseUrl}}/auth/login",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"john@example.com\",\n  \"password\": \"password123\"\n}"
            }
          }
        }
      ]
    },
    {
      "name": "User",
      "item": [
        {
          "name": "Get Profile",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/user/profile",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }]
          }
        },
        {
          "name": "Update Profile",
          "request": {
            "method": "PUT",
            "url": "{{baseUrl}}/user/profile",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"fullName\": \"John Updated\"\n}"
            }
          }
        }
      ]
    },
    {
      "name": "Prompts",
      "item": [
        {
          "name": "Get All Prompts",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/prompts?search=&category=&aiTool=&sort=newest",
              "host": ["{{baseUrl}}"],
              "path": ["prompts"],
              "query": [
                { "key": "search", "value": "" },
                { "key": "category", "value": "" },
                { "key": "aiTool", "value": "" },
                { "key": "sort", "value": "newest" }
              ]
            },
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }]
          }
        },
        {
          "name": "Create Prompt",
          "request": {
            "method": "POST",
            "url": "{{baseUrl}}/prompts",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"React Code Reviewer\",\n  \"promptText\": \"Review the following React code for best practices, performance issues, and potential bugs...\",\n  \"category\": \"Coding\",\n  \"aiTool\": \"ChatGPT\",\n  \"tags\": [\"react\", \"code-review\", \"javascript\"]\n}"
            }
          }
        },
        {
          "name": "Get Single Prompt",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/prompts/:id",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }]
          }
        },
        {
          "name": "Update Prompt",
          "request": {
            "method": "PUT",
            "url": "{{baseUrl}}/prompts/:id",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Updated Title\",\n  \"tags\": [\"react\", \"updated\"]\n}"
            }
          }
        },
        {
          "name": "Delete Prompt",
          "request": {
            "method": "DELETE",
            "url": "{{baseUrl}}/prompts/:id",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }]
          }
        },
        {
          "name": "Toggle Favorite",
          "request": {
            "method": "PUT",
            "url": "{{baseUrl}}/prompts/favorite/:id",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }]
          }
        },
        {
          "name": "Duplicate Prompt",
          "request": {
            "method": "POST",
            "url": "{{baseUrl}}/prompts/duplicate/:id",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }]
          }
        },
        {
          "name": "Get Stats",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/prompts/stats",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }]
          }
        }
      ]
    }
  ]
}
